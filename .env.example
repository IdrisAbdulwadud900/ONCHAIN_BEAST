# OnChain Beast (side-wallet tracer) configuration
# Copy to .env and adjust.

# Solana RPC endpoint
SOLANA_RPC_ENDPOINT=https://api.mainnet-beta.solana.com

# Storage backend:
# - For quick start (no Postgres): DATABASE_URL=memory
# - For Postgres: DATABASE_URL=postgresql://<user>@localhost/onchain_beast_personal
DATABASE_URL=memory

# API server bind
API_HOST=127.0.0.1
API_PORT=8080

# Optional: enable API key auth by setting a comma-separated list.
# If set, clients must send: X-API-Key: <one_of_these_values>
API_KEYS=

# Telegram bot
TELEGRAM_BOT_TOKEN=
ONCHAIN_BEAST_API_BASE=http://127.0.0.1:8080
# If API_KEYS is set on the server, set this to one of those keys for the bot.
ONCHAIN_BEAST_API_KEY=

# OnChain Beast Configuration
# Copy this file to .env and configure for your environment

# Solana RPC Endpoint
SOLANA_RPC_ENDPOINT=https://api.mainnet-beta.solana.com
RPC_ENDPOINT=https://api.mainnet-beta.solana.com

# Database Configuration (PostgreSQL for production)
DATABASE_URL=postgresql://localhost/onchain_beast

# Redis Cache
REDIS_URL=redis://localhost:6379

# API Server Configuration
API_HOST=127.0.0.1
API_PORT=8080

# Performance Tuning
MAX_CONCURRENT_REQUESTS=100
CACHE_TTL_SECONDS=300

# Security Configuration
# Enable authentication (recommended for production)
ENABLE_AUTH=false

# API Keys (comma-separated list)
# Generate secure keys for production: openssl rand -hex 32
API_KEYS=demo-key-123,test-key-456,prod-key-789

# Rate Limiting
# Requests per minute for unauthenticated users
RATE_LIMIT_PER_MINUTE=60

# Logging
RUST_LOG=info

# Telegram Bot (optional)
# NOTE: Never commit real tokens. Put the real value in your local .env only.
TELEGRAM_BOT_TOKEN=

# Telegram bot will call this API base.
# Defaults to http://127.0.0.1:8080 if unset.
ONCHAIN_BEAST_API_BASE=http://127.0.0.1:8080
